---
const { linkName, linkUrl } = Astro.props;
---

<div
  class="box-content text-center h-auto p-3 w-72 m-3 bg-gradient-to-r from-indigo-900 to-blue-500 hover:from-sky-500 hover:to-cyan-900 text-zinc-50 rounded-lg"
>
  <a href={linkUrl} target="_blank" rel="noreffer">
    <span class="font-bold text-3xl">
      {linkName}
    </span>
  </a>
</div>
